<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#FFFFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:background="#0e5aa8"
            android:orientation="horizontal">

            <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Trang Chủ"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:background="#0e5aa8"-->
            <!--android:textColor="#FFF"-->
            <!--android:id="@+id/btnTrangchu"/>-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới thiệu"
                android:layout_marginRight="20dp"
                android:background="#0e5aa8"
                android:textColor="#FFF"
                android:id="@+id/btnGioiThieu"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liên Hệ"
                android:layout_marginRight="20dp"
                android:background="#0e5aa8"
                android:textColor="#FFF"
                android:id="@+id/btnLienHe"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDangKy"
                android:background="@color/colorMain"
                android:textColor="#FFF"
                android:text="Dang ky"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bf1111"
            android:textStyle="italic"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="30dp"

            android:text="Danh sách môn học"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="5dp"
            android:id="@+id/lvDanhSachMonHoc"></ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnDangKyMonHoc"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Đăng Ký" />
                <Button
                    android:layout_width="160dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnChiTietDK"
                    android:text="Chi Tiết Đăng Ký"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>