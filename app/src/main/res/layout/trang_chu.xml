<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:background="#0e5aa8"
        android:orientation="horizontal">

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Trang Chủ"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:background="#0e5aa8"-->
            <!--android:textColor="#FFF"-->
            <!--android:id="@+id/btnTrangchu"/>-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới thiệu"
            android:layout_marginRight="20dp"
            android:background="#0e5aa8"
            android:textColor="#FFF"
            android:id="@+id/btnGioiThieu"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liên Hệ"
            android:layout_marginRight="20dp"
            android:background="#0e5aa8"
            android:textColor="#FFF"
            android:id="@+id/btnLienHe"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDangKy"
            android:background="@color/colorMain"
            android:textColor="#FFF"
            android:text="Dang ky"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuyển sinh trường"
            android:textColor="#ff0e0e"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="113dp"
                android:id="@+id/h1"
                android:src="@drawable/tintuc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2a3aa4"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="TUYỂN SINH TRÌNH ĐỘ THẠC SĨ CHUYÊN NGÀNH CÔNG NGHỆ THỰC PHẨM"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Trường Đại học Công nghệ Sài Gòn xin thông báo tuyển sinh chương trình đào tạo thạc sĩ chuyên ngành Công nghệ thực phẩm"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khoa Luôn Nâng Cao Chuyên Môn Và Cơ Sở Vật Chất Phục Vụ Đào Tạo "
            android:textColor="#ff0e0e"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="113dp"
                android:id="@+id/h2"
                android:src="@drawable/hoatdong"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#2a3aa4"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="Khoa Luôn Nâng Cao Chuyên Môn Và Cơ Sở Vật Chất Phục Vụ Đào Tạo"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Giảng viên Khoa luôn không ngừng trau dồi kiến thức, nâng cao khả năng sư phạm, chuyên môn và không ngừng tham gia NCKH. "/>
    </LinearLayout>
</LinearLayout>